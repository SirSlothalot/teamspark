extends layout

block content
    #coverflowProjectCreate.coverflow
        .row
            .container-fluid
                .col-md-6.col-md-offset-3
                    form.entries(name='/project/new', method="post", onload='makeFooter()')
                        img#avatarImg.avatar(src='/images/logo.png', alpostt='Avatar')
                        br
                        p
                          | Edit project 
                          b #{project.title}
                        .form-group
                            label Description *
                            textarea#Description(type='textarea', name='description', required) #{project.description}
                        .form-group
                            label Required skill level 
                            select#SkillLevel(name='skillLevel')
                              option(value='#{project.skillLevel}') #{project.skillLevel}
                              option(value='1') Beginner
                              option(value='2') Intermediate
                              option(value='5') Advanced
                        .form-group#progLanguages
                            label Programming languages
                            - for (var i = 0; i < project.programmingLanguages.length; i++)
                                select#selectProgLanguage(name='programmingLanguages')
                                  option(value='#{project.programmingLanguages[i]}') #{project.programmingLanguages[i]}
                         .form-group
                             button#plusExtraProgLang(name = 'posproglang', type='button', onclick='return addLangOpt()') +
                             button#minusExtraProgLang(name = 'negproglang', type = 'button', onclick='return minusLangOpt()') -
                         .form-group
                             label Weekly workload in hours
                             select#workload(name='workload')
                               option(value='#{project.workload}') #{project.workload} hours per week.
                               option(value='5') 5 hours or less.
                               option(value='10') 10 hours per week.
                               option(value='15') 15 hours per week.
                               option(value='20') 20 hours per week.
                               options(value='21') More than 20 hours per week.
                        .form-group
                            label Willing to work in a virtual team? *
                            select#online(name='virtualTeam')
                              option(value='#{project.virtualTeam}') #{project.virtualTeam}
                              option(value='yes') Yes
                              option(value='no') No
                        .form-group
                            button.btn.btn-lg.btn-default.btn-block(onclick='return validateSubmit()') Update
