extends layout

block content
  #coverflow01.coverflow
    .jumbotron
      .container
        h1 #{user.fullname}
        p #{user.email}
        p #{user.username}
        img#avatarImg.avatar(src='/images/female_avatar.png', alt='Avatar')
  .content
    .container
        .row
            .col-sm-8.col-md-offset-2
                .text-left
                    h2 Bio: #{user.bio}
            .col-sm-5.col-md-offset-2
                .text-left
                    h2 Country: #{user.country}
                    h2 Languages: #{user.mainSpokenLanguage}
                    h2 Date of birth: #{user.dob}
            .col-sm-5
                .text-left
                    h2 Skill level: #{user.skillLevel}
                    h2 Availability per week: #{user.availability}
                    //- h2 Works online: #{user.online}
                    h2 Interest: #{user.userInterest}
        .row
            .col-sm-5.col-md-offset-2
                .text-left
                    h2 Programming languages:
            .col-sm-5
                .text-left
                    h2 #{user.programmingLanguages}
        .row
            .col-sm-8.col-md-offset-2
                .text-left
                    h2 Accounts: #{user.accounts}
