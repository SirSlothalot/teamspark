extends layout

block content
  #coverflow01.coverflow
    .jumbotron
      .container
        h1 #{user.fullname}
        p #{user.email}
        p #{user.username}
        img#avatarImg.avatar(src='/images/female_avatar.png', alt='Avatar')
  .content
    .container
        .row
            .col-sm-8.col-sm-offset-2
                .text-left
                    h2 Bio: #{user.bio}
        .row
            .col-sm-4.col-sm-offset-2
                .text-left
                    h2 Country: #{user.country}
                    h2 Languages: #{user.spokenLanguages}
                    h2 Date of birth: #{user.dob}
            .col-sm-4
                .text-left
                    h2 Skill level: #{user.skillLevel}
                    h2 Availability per week: #{user.availability}
                    //- h2 Works online: #{user.online}
                    h2 Interest: #{user.userInterest}
        .row
            .col-sm-8.col-sm-offset-2
                .text-left
                  - var langString ="Programming languages: ";
                  - each lang in user.programmingLanguages
                    - langString = langString + lang + ", ";
                  - var langString = langString.substr(0, langString.length-2);
                  h2 #{langString}
        .row
            .col-sm-8.col-sm-offset-2
                .text-left
                    h2 Accounts: #{user.accounts}
