                                input#country(type='text', name='country', placeholder='Australia')
                                label State/ Province
                                input#state(type='text', name ='state', placeholder='Western Australia')
                                label Suburb
                                input#suburb(type='text', name ='suburb', placeholder='Crawley')
                        .form-group
                            label Bio
                            textarea#bio(type='textarea', name='bio', placeholder='Tell potential team members more about yourself...', required)
                        .form-group#accountsGroup
                            label Accounts
                            input#gitHubAcc(type='text', name ='accounts', placeholder='github.com/')
                        .form-group
                            button#plusExtraAccount(name = 'posaccounts', type='button', onclick='return addAccountOpt()') +
                            button#minusExtraAccount(name = 'negaccounts', type = 'button', onclick='return minusAccountOpt()') -
                        .form-group
                            button.btn.btn-lg.btn-default.btn-block(onclick='return validateSignUp()') Create
                    script(type='text/javascript', src='/javascripts/sign_up_event.js')
