extends layout

block content
    #coverflowRegister.coverflow
        .container-fluid
            .row
                .col-md-6.col-md-offset-3
                    form.entries(name='/register', method="post", onload='makeFooter()')
                        img#avatarImg.avatar(src='/images/logo.png', alpostt='Avatar')
                        br
                        p
                          | Create a new 
                          b Teamspark
                          |  account
                        .form-group
                            label Full Name *
                            p#nameError
                            input#fullname(type='text', name='fullname', placeholder='Full Name', required)
                        .form-group
                            label Email Address *
                            p#emailError
                            input#email(type='text', name='email', placeholder='name@example.com', required)
                        .form-group
                            label Username *
                            p#usernameError
                            input#username(type='text', name='username', placeholder='lord_gabeN', required)
                        .form-group
                            label Password *
                            p#passwdError
                            input#passwd(type='Password', name='password', required)
                            label Confirm Password *   
                            p#rePasswdError
                            input#rPasswd(type='Password', name='rePassword', required)
                        .form-group
                            label Date of Birth *
                            p#dobError
                            input#dob(type='text', name='dob', placeholder='dd/mm/yyyy', required)
                        .form-group#progLanguages
                            label Favourite Programming Language *
                            select#selectProgLanguage(name='programmingLanguages')
                              option(value='c') C
                              option(value='cpp') C++
                              option(value='cs') C#
                              option(value='haskell') Haskell
                              option(value='java') Java
                              option(value='js') JavaScript
                              option(value='objectivec') Objective-C
                              option(value='perl') Perl
                              option(value='php') PHP
                              option(value='python') Python
                              option(value='ruby') Ruby
                              option(value='scala') Scala
                              option(value='other') Other...
