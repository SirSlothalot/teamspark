extends layout

block content
  form.entries(name='/register', method="post", onload='makeFooter()')
    img#avatarImg.avatar(src='/images/logo.png', alpostt='Avatar')
    br
    p
      | Create a new 
      b Teamspark
      |  account
    label Full Name *
    nbsp
    p#nameError
    br
    input#fullname(type='text', name='fullname', placeholder='Full Name')
    br
    label Email Address *
    nbsp
    p#emailError
    br
    input#email(type='text', name='email', placeholder='name@example.com')
    br
    label Username *
    nbsp
    p#usernameError
    br
    input#username(type='text', name='username', placeholder='lord_gabeN')
    br
    label Password *
    nbsp
    p#passwdError
    br
    input#passwd(type='Password', name='password')
    br
    label Confirm Password *   
    nbsp
    p#rePasswdError
    br
    input#rPasswd(type='Password', name='rePassword')
    br
    label Date of Birth *
    nbsp
    p#dobError
    br
    input#dob(type='text', name='dob', placeholder='dd/mm/yyyy')
    br
    label Favourite Programming Language *
    br
    select#language(name='programmingLanguage')
      option(value='c') C
      option(value='cpp') C++
      option(value='cs') C#
      option(value='haskell') Haskell
      option(value='java') Java
      option(value='js') JavaScript
      option(value='objectivec') Objective-C
      option(value='perl') Perl
      option(value='php') PHP
      option(value='python') Python
      option(value='ruby') Ruby
      option(value='scala') Scala
      option(value='other') Other...
    br

    br
    label Familiar Programming Languages
    br
    input#extraProgLang(type='text', name='programmingLanguage', placeholder='C')
    br
    button#plusExtraProgLang(name = 'posproglang', type='button', onclick='return addLangOpt()') +
    button#minusExtraProgLang(name = 'negproglang', type = 'button', onclick='return minusLangOpt()') - 
    br 

    label Spoken Language(s) *
    br
    input#mainSpokenLanguage(type='text', name='mainSpokenLanguage', placeholder='English')
    br
    button#plusExtraSpLang(name = 'posspeaklang', type='button', onclick='return addSpeakOpt()') +
    button#minusExtraSpLang(name = 'negspeaklang', type = 'button', onclick='return minusSpeakOpt()') - 
    br 

    label Skill Level *
    br
    select#skillLevel(name='skillLevel')
      option(value='beginner') No prior experience/ Noob.
      option(value='amaetaur') Know the basics of my favourite programming language.
      option(value='semi') Can solve complex problems efficiently using data structures and algorithms.
      option(value='4') Regularly take part in programming competitions with above average performance.
      option(value='pro') Have worked as a software dev/ engineer for over 2 years.
      option(value='world class') Have worked for a major tech company/ contributed to an open source project used by 1000+ users.
    br


    label Area of Interest
    br
    select#interest(name='userInterest')
      option(value='ai') Machine Learning.
      option(value='webdev') Web App Development.
      option(value='datamining') Data Mining.
      option(value='graphics') Graphics and Animation.
      option(value='gamedev') Game Development.
      option(value='uxdesign') UX Design.
      option(value='network') Network and Security.
      option(value='system') Systems Programming.
      option(value='research') Research.
    br


    label Availability for collaboration (Weekly)
    br
    select#availability(name='availability')
      option(value='5') 5 hours or less.
      option(value='10') 10 hours per week.
      option(value='15') 15 hours per week.
      option(value='20') 20 hours per week.
      options(value='21') More than 20 hours per week.
    br
    label Location (Use Google Location Service)
    br
    br
    img.avatar(src='/images/location.png', alpostt='gmaps')
    br
    
    label Location (Enter Manually)*
    br
    label Country
    input#country(type='text', name='country', placeholder='Australia')
    br
    label State/ Province
    input#state(type='text', name ='state', placeholder='Western Australia')
    br
    label Suburb
    input#suburb(type='text', name ='suburb', placeholder='Crawley')
    
    //label#preterm
    //  br
    //  | I have read all the 
    //  label#terms terms and conditions
    //  |  and I agree. 
    ////label#terms Show
    //br
    //input#agreebox(type='checkbox', name='agreement')
    //label I Agree
    //br
    //p#agreementErr
    //br
    //br
    //br
    //<input type="submit" value="Submit">
    //input(type='submit', value='Submit')
    button#signupbutton.genericButton(onclick='return validateSignUp()') Next
    br
  script(type='text/javascript', src='/javascripts/sign_up_event.js')
