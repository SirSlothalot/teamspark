extends layout

block content
  #coverflow01.coverflow
    .container-fluid
      .col-md-6.col-md-offset-3
        form(name='/login', method="post")
          h2 Welcome Back
          label.sr-only(for='inputEmail') Email address
          input.form-control(type='email', name='username', placeholder='Email address', required, autofocus)
          label.sr-only(for='inputPassword') Password
          input.form-control(type='password', name='password', placeholder='Password', required)
          br
          button.btn.btn-lg.btn-default.btn-block(type='submit') Sign in
