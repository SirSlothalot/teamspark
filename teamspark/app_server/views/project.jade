extends layout

block content
  #coverflowProject.coverflow
    .jumbotron
      .container
        h1 #{project.title}
        p #{project.owner}
        img#avatarImg.avatar(src='/images/female_avatar.png', alt='Avatar')
  .content
    .container
        .row
            .col-sm-8.col-md-offset-2
                .text-left
                    h2 Description: #{project.description}
        .row
            .col-sm-5.col-md-offset-2
                .text-left
                    h2 Country: #{project.country}
                    h2 Language: #{project.spokenLanguages}
            .col-sm-5
                .text-left
                    h2 Difficulty: #{project.skillLevel}
                    h2 Workload: #{project.workload}
                    h2 Virtual meetings: #{project.virtualTeam}
        .row
            .col-sm-5.col-md-offset-2
                .text-left
                    h2 Programming languages: #{project.programmingLanguages}
