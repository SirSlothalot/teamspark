extends layout

block content
  #coverflow01.coverflow
    .jumbotron
      .container
        h1 #{project.title}
        p #{project.owner}
        img#avatarImg.avatar(src='/images/female_avatar.png', alt='Avatar')
  .content
    .container
        .row
            .col-sm-2
            .col-sm-5
                .text-left
                    h2 Country: #{project.country}
                    h2 Language: #{project.mainSpokenLanguage}
            .col-sm-5
                .text-left
                    h2 Difficulty: #{project.skillLevel}
                    h2 Required availability: #{project.availability}
                    h2 Virtual meetings: #{project.online}
        .row
            .col-sm-2
            .col-sm-5
                .text-left
                    h2 Required programming languages:
            .col-sm-5
                    h2 #{project.programmingLanguages}
