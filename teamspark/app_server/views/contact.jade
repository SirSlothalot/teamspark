extends layout

block content
  #coverflow01.coverflow
    .container-fluid
      .col-md-6.col-md-offset-3
        form.entries.form-group.form-group-lg(action='javascript:successContact()')
          img#avatarImg.avatar(src='/images/logo.png', alt='Avatar')
          p Your two cents matter!
          .form-group
            label(for='Message') Message
            textarea.form-control(id='Message', name='message', placeholder='Please type your feedback here...')
          .form-group
            label(for='Email') Email Address
            input.form-control(id='Email',type='email', name='Email', placeholder='user@example.com')
          button.btn.btn-lg.btn-default.btn-block(onclick='return validateSubmit()') Submit
  script(type='text/javascript', src='/javascripts/contact_events.js')
